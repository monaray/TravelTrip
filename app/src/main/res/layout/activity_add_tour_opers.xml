<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AddTourOpers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="Для того, чтоб добавить туроператора - заполните следующие поля"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/sptouropers"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:ems="10"
            android:hint="Введите название туроператора"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:ems="10"
            android:hint="Введите Email"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/edPhone"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:ems="10"
            android:hint="Введите номер телефона"
            android:inputType="phone"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/edsite"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:ems="10"
            android:hint="Введите сайт"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/button"
            android:text="Сохранить"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>