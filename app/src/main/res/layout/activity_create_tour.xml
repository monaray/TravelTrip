<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".CreateTour">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Для того, чтоб создать новый тур - заполните следующие поля"
            android:fontFamily="@font/font"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/edname"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:ems="10"
            android:hint="Введите название тура"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:background="@drawable/fields"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/edcountry"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:hint="Введите страну"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/edcity"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:hint="Введите город"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/edStart"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:hint="Введите дату начала"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/edFinish"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:hint="Введите дату окончания"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <EditText
            android:id="@+id/edpeople"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:hint="Введите количество людей"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/edstars"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:hint="Введите количество звезд в отели"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/edprice"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:ems="10"
            android:hint="Введите цену за тур"
            android:inputType="number"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/button"
            android:text="Сохранить"
            android:textColor="@android:color/background_light" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>