<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".CreateOrder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:fontFamily="@font/font"
            android:text="Для того, чтоб создать заказ заполните следующие поля:"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="400dp"
            android:layout_height="30dp" />

        <Spinner
            android:id="@+id/sptours"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"/>

        <Space
            android:layout_width="423dp"
            android:layout_height="30dp" />

        <Spinner
            android:id="@+id/sptouropers"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/edFIO"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/fields"
            android:ems="10"
            android:hint="Введите ФИО покупателя"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnUpd"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="75sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/button"
            android:text="Отправить"
            android:textColor="@android:color/background_light" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>